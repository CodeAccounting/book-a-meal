{
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches":80,
  "require": ["babel-register"],
  "exclude": [
    "**/*.test.js",
    "**/__tests__/**",
    "**/node_modules/**",
    "client",
    "server/config",
    "server/coverage/**",
    "server/tests/**",
    "server/src/models/index.js",
    "server/test{,-*}.js",
    "server/docs.**"
  ],
  "reporter": ["lcov", "json", "text"],
  "sourceMap": false,
  "instrument": false,
  "cache": true,
  "report-dir": "./server/coverage"
}